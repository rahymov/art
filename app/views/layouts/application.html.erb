<!DOCTYPE html>
<html>
  <head>
    <title>Art</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <div class="navbar-brand"><%= link_to "Art", root_path %></div>
          <div class="pull-right float-right">
            <ul>
              <% if user_signed_in? %>
              <button class="btn"><%= link_to "Account", edit_user_registration_path %></button>              
              <button class="btn"><%= link_to "Sign out", destroy_user_session_path, method: :delete%></button>
              <% else %>  
              <button class="btn"><%= link_to "Sign In", new_user_session_path %></button>
              <button class="btn"><%= link_to "Sign Up", new_user_registration_path %></button>
              <% end %>
            </ul>
          </div>
    </nav>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
